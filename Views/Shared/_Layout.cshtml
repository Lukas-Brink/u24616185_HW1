<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - RescueBus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }
    <nav class="navbar navbar-expand-lg border-bottom shadow-sm py-3 px-4">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a href="~/Home/Index" class="d-flex align-items-center text-decoration-none">
                    <img src="~/Images/122461-19377246.jpg" alt="Logo" width="60" height="60" class="me-2" />
                    <div class="d-flex flex-column">
                        <span class="fw-bold text-primary-emphasis">RescueBus</span>
                        <small class="text-muted" style="margin-top:-4px;">stay with us</small>
                    </div>
                </a>
            </div>


            <div class="ms-auto">
                <ul class="navbar-nav flex-row gap-3">
                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(currentController == "Home" && currentAction == "Index" ? "active text-dark" : "text-secondary")" href="~/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(currentController == "Home" && currentAction == "RideHistory" ? "active text-dark" : "text-secondary")" href="~/Home/RideHistory">Ride History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(currentController == "Manage" ? "active text-dark" : "text-secondary")" href="~/Home/Manage">Manage</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
